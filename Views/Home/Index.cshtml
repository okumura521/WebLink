@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <p>松山市の今日の天気: <a href="https://a.msn.com/54/JA-JP/ct33.8392,132.7656?ocid=ansmsnweather">こちら</a>で確認</p>
    <!-- AI検索フォーム -->
    <form method="get" action="https://www.bing.com/search" class="d-flex justify-content-center mt-3">
        <input type="text" name="q" class="form-control me-2" placeholder="AI検索...">
        <button type="submit" class="btn btn-outline-primary">検索</button>
    </form>
</div>

<div id="countdown" class="text-3xl font-bold text-black bg-blue-500 shadow-lg rounded-lg p-6 text-center">
    結婚10周年記念日まであと <span id="days"></span> 日 ✨
</div>

<script>
    function updateCountdown() {
        let anniversaryDate = new Date("2025-09-17"); // 記念日を設定
        let now = new Date();
        let diff = anniversaryDate - now;

        let days = Math.floor(diff / (1000 * 60 * 60 * 24));
        document.getElementById("days").innerText = days;
    }

    updateCountdown(); // 初回呼び出し
    setInterval(updateCountdown, 1000 * 60 * 60); // 1時間ごとに更新
</script>