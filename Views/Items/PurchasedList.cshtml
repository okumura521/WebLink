@{
}
<h2>購入済みリスト</h2>
<table class="table">
    <thead>
        <tr>
            <th>名前</th>
            <th>番号</th>
            <th>購入日</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Number</td>
                <td>@item.HireDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">購入リストへ戻る</a>